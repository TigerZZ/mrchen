<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">



<hibernate-mapping >

	<class name="com.haiersoft.ch05.pojos.User" table="USERDETAILS">
		<id name="id" column="ID">
			<generator class="uuid.hex"></generator>
		</id>	
		<property name="name" column="userName" type="string" not-null="true"></property>
		<property name="pwd" column="pwd" type="string" not-null="true"></property>
	</class>

</hibernate-mapping>